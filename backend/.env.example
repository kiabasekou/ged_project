# --- CONFIGURATION GÉNÉRALE ---
# Valeurs : development, production, deployment
DJANGO_ENV=development
SECRET_KEY=change-me-in-production-very-long-and-secure-string
DEBUG=True

# --- RÉSEAU ---
# En déploiement local (Libreville), mettez l'IP du serveur (ex: 192.168.1.10)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- BASE DE DONNÉES ---
# Format : postgres://USER:PASSWORD@HOST:PORT/NAME
DATABASE_URL=postgres://ged_user:ged_password@db:5432/ged_db

# --- STOCKAGE GED (SPÉCIFIQUE ON-PREMISE) ---
# Chemin absolu sur le serveur local pour les documents sensibles
# Exemple Linux : /var/lib/ged_data/media
MEDIA_ROOT_PATH=./media

# --- SÉCURITÉ JWT ---
# Durée de vie des tokens (en minutes)
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=1

# --- POSTGRES (POUR DOCKER COMPOSE) ---
POSTGRES_DB=ged_db
POSTGRES_USER=ged_user
POSTGRES_PASSWORD=ged_password